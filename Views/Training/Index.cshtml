@model List<tp_sveikatele.DTOS.AddTrainingDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Summary</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
        }

        .exercise-list {
            margin-top: 20px;
        }

        .exercise-item {
            background-color: #fff;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

            .exercise-item p {
                margin: 5px 0;
            }

        .save-btn {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Jūsų treniruočių suvestinė</h2>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="exercise">Pratimas:</label>
                <select class="form-control" id="exercise" name="Pratimas" required>
                    <option value="">Pasirinkite pratimą</option>
                    <option value="Pritūpimai">Pritūpimai</option>
                    <option value="Presas ant suoliuko">Presas ant suoliuko</option>
                    <option value="Mirties trauka">Mirties trauka</option>
                    <option value="Traukimas žemyn">Traukimas žemyn</option>
                    <option value="Šoninis svorio traukimas">Šoninis svorio traukimas</option>
                </select>
            </div>
            <div class="form-group">
                <label for="weight">Naudoti svoriai, kg:</label>
                <input type="number" class="form-control" id="weight" name="Svoris" required>
            </div>
            <div class="form-group">
                <label for="sets">Setai:</label>
                <input type="number" class="form-control" id="sets" name="Setai" required>
            </div>
            <div class="form-group">
                <label for="reps">Pakartojimai:</label>
                <input type="number" class="form-control" id="reps" name="Pakartojimai" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block save-btn">Išsaugoti</button>
            </div>
        </form>

        <div class="exercise-list">
            <h3 class="text-center">Visi užregistruoti pratimai:</h3>
            @foreach (var workout in Model)
            {
                <div class="exercise-item">
                    <p><strong>Pratimas:</strong> @workout.Pratimas</p>
                    <p><strong>Svoris:</strong> @workout.Svoris kg</p>
                    <p><strong>Setai:</strong> @workout.Setai</p>
                    <p><strong>Pakartojimai:</strong> @workout.Pakartojimai</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
