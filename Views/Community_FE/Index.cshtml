    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url('/images/vege.png');
        }

        .statement {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 36px;
            font-weight: bold;
            text-transform: uppercase;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        .background {
            background-size: cover;
            background-position: center;
            height: 200vh; /* Adjust height to move posts further down */
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative; /* Set position relative for absolute positioning of posts */
        }

        .content {
            max-width: 850px;
            width: 90%;
            padding-top: 150x; /* Adjust padding to center posts */
        }

        .post {
            margin-top: 20px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.95);
            transition: transform 0.3s ease; /* Add transition for smooth animation */
            cursor: pointer;
            position: relative; /* Ensure like icon is positioned correctly */
        }

        .like-icon {
            position: absolute;
            bottom: 10px;
            right: 10px;
            color: #ccc;
            cursor: pointer;
        }

        .like-icon:hover {
            color: #ff4500; /* Change color on hover */
        }

        .post:hover {
            transform: scale(1.02); /* Scale up slightly on hover */
        }

        .modal {
            display: none; /* Initially hidden */
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 600px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 24px;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: none;
            box-sizing: border-box;
        }

        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        .post-content {
            text-align: left;
        }

        .post-content h3 {
            margin: 0 0 10px;
            font-size: 1.5em;
        }

        .post-content p {
            margin: 5px 0;
        }

        .add-button {
            display: block;
            margin: 0 auto;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #b9264b;
            color: white;
            font-size: 18px;
            font-family: Arial, sans-serif;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-button:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }

        .text {
            text-align: center;
            font-size: 65px; /* Increased font size */
            color: white;
            font-family: Oswald, sans-serif; /* Minimalistic font */
            text-transform: uppercase;
            margin-top: 120px; /* Move it down */
            line-height: 1.2; /* Adjust line height */
        }

        .post-content blockquote {
            margin: 10px 0 0;
            padding-left: 10px;
            border-left: 5px solid #ccc;
            color: #555;
            font-style: italic;
        }

        .profile-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 20px;
        }
    </style>
</head>
