<script>
    // Function to open the post modal
   function openPostModal(post) {
    var title = post.getAttribute('data-title');
    var author = post.getAttribute('data-author');
    var date = post.getAttribute('data-date');
    var fullText = post.getAttribute('data-fulltext');

    var modalBody = document.getElementById('modal-body');
    modalBody.innerHTML = '<h3>' + title + '</h3>' +
                          '<p><strong>Autorius:</strong> ' + author + '<br>' +
                          '<strong>Data:</strong> ' + date + '</p>' +
                          '<p>' + fullText + '</p>';

    document.getElementById('myModal').style.display = 'flex';
}

    // Function to close the modal
    function closeModal() {
        document.getElementById('myModal').style.display = 'none';
    }
</script>


